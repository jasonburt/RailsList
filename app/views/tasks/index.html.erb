<div id="mainMarq"></div>

<table class="tasksHomeList">
  <tr>
    <th><span class="text-info">Task</span></th>
    <!--<th>Notes</th>-->
    <th><span class="muted">Status </span></th>
    <th></th>
    <th><span class="muted">Actions</span></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><strong><%= task.name %></strong></td>
    <!--<td><%= task.notes %></td>-->
    <td>
      <% if task.status == true %>
        <span class="icon-ok"></span>
        <% else %>
          <span class="icon-minus"></span>
        <% end %>
    </td>
    <td><%= link_to 'Info', task , :class=> ''%></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Remove', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

